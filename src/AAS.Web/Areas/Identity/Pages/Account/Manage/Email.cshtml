@page
@model EmailModel
@{
    ViewData["Title"] = "Account Settings";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="manage-page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="manage-content-wrapper">
    <div class="manage-sidebar">
        <partial name="_ManageNav" />
    </div>
    <div class="manage-main-content">
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <div class="manage-card">
            <h4 class="manage-card-title">Manage Email</h4>
                <form id="email-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Current Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Your email address" disabled />
                            <small class="text-success"><i class="bi bi-check-circle"></i> Email confirmed</small>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Current Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Your email address" disabled />
                            <small class="text-warning"><i class="bi bi-exclamation-triangle"></i> Email not confirmed</small>
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link p-0 mt-1">Send verification email</button>
                        </div>
                    }
                    
                    <div class="mb-3">
                        <label asp-for="Input.NewEmail" class="form-label">New email</label>
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter new email address" type="email" />
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                    
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary">Change email</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
