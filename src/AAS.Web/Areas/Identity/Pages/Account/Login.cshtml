@page
@model LoginModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L

@{
    ViewData["Title"] = L["Log in"];
}

<div class="identity-card">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-12">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                        <label asp-for="Input.Email" class="form-label">@L["Email"]</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                        <label asp-for="Input.Password" class="form-label">@L["Password"]</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @L["Remember me?"]
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@L["Log in"]</button>
                    </div>
                    <div class="identity-links">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">@L["Forgot your password?"]</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@L["Register as a new user"]</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@L["Resend email confirmation"]</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
