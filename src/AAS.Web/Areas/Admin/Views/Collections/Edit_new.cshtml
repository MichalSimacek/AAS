@model AAS.Web.Models.Collection
@using AAS.Web.Models

<div class="admin-edit-container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-modern alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>
                @TempData["SuccessMessage"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>
                @TempData["ErrorMessage"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="edit-header">
        <div class="header-icon">
            <i class="bi bi-pencil-square"></i>
        </div>
        <h1 class="header-title">Edit Collection</h1>
        <p class="header-subtitle">Update collection details and manage media</p>
    </div>

    <form asp-area="Admin" asp-controller="Collections" asp-action="Edit" method="post" enctype="multipart/form-data" class="edit-form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-card">
            <div class="card-header-custom">
                <i class="bi bi-info-circle me-2"></i>
                <h3 class="card-title-custom">Collection Details</h3>
            </div>
            <div class="card-body-custom">
                <div class="form-group-modern">
                    <label for="Title" class="form-label-modern">
                        <i class="bi bi-pencil me-1"></i> Title <span class="required-star">*</span>
                    </label>
                    <input asp-for="Title" name="Title" class="form-control-modern" />
                    <small class="form-text text-muted">Leave unchanged if you only want to reorder images</small>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">
                        <i class="bi bi-tag me-1"></i> Category <span class="required-star">*</span>
                    </label>
                    <select name="Category" class="form-select-modern">
                        <option value="0" selected="@(Model.Category == CollectionCategory.Paintings)">ðŸŽ¨ Paintings</option>
                        <option value="1" selected="@(Model.Category == CollectionCategory.Jewelry)">ðŸ’Ž Jewelry</option>
                        <option value="2" selected="@(Model.Category == CollectionCategory.Watches)">âŒš Watches</option>
                        <option value="3" selected="@(Model.Category == CollectionCategory.Statues)">ðŸ—¿ Statues</option>
                        <option value="4" selected="@(Model.Category == CollectionCategory.Other)">âœ¨ Other</option>
                    </select>
                </div>

                <div class="form-group-modern">
                    <label for="Description" class="form-label-modern">
                        <i class="bi bi-text-paragraph me-1"></i> Description
                    </label>
                    <textarea asp-for="Description" name="Description" rows="6" class="form-control-modern">@Model.Description</textarea>
                    <small class="form-text text-muted">Detailed description of the collection item</small>
                </div>
            </div>
        </div>

        <div class="form-card">
            <div class="card-header-custom">
                <i class="bi bi-currency-euro me-2"></i>
                <h3 class="card-title-custom">Price & Availability</h3>
            </div>
            <div class="card-body-custom">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-group-modern">
                            <label class="form-label-modern">
                                <i class="bi bi-circle-fill me-1"></i> Status <span class="required-star">*</span>
                            </label>
                            <select name="Status" class="form-select-modern">
                                <option value="0" selected="@(Model.Status == CollectionStatus.Available)">ðŸŸ¢ Available</option>
                                <option value="1" selected="@(Model.Status == CollectionStatus.Sold)">ðŸ”´ Sold</option>
                                <option value="2" selected="@(Model.Status == CollectionStatus.InAuction)">ðŸŸ¡ In Auction</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group-modern">
                            <label for="Price" class="form-label-modern">
                                <i class="bi bi-cash me-1"></i> Price (Optional)
                            </label>
                            <input asp-for="Price" name="Price" type="number" step="0.01" min="0" class="form-control-modern" placeholder="0.00" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group-modern">
                            <label class="form-label-modern">
                                <i class="bi bi-currency-exchange me-1"></i> Currency
                            </label>
                            <select name="Currency" class="form-select-modern">
                                <option value="0" selected="@(Model.Currency == Currency.EUR)">EUR (â‚¬)</option>
                                <option value="1" selected="@(Model.Currency == Currency.USD)">USD ($)</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="verified-badge-container">
                    <div class="form-check-modern">
                        <input class="form-check-input" type="checkbox" name="AASVerified" id="AASVerified" value="true" @(Model.AASVerified ? "checked" : "")>
                        <label class="form-check-label" for="AASVerified">
                            <i class="bi bi-patch-check-fill text-primary me-2"></i>
                            <strong>AAS Verified</strong>
                            <span class="badge-subtitle">Authenticity guaranteed by Aristocratic Artwork Sale</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-card">
            <div class="card-header-custom">
                <i class="bi bi-images me-2"></i>
                <h3 class="card-title-custom">Add New Images</h3>
            </div>
            <div class="card-body-custom">
                <div class="upload-section">
                    <label class="form-label-modern">
                        <i class="bi bi-image me-1"></i> Add Images
                    </label>
                    <div class="file-upload-wrapper">
                        <input type="file" id="newImages" name="newImages" multiple accept="image/*" class="file-input" />
                        <label for="newImages" class="file-upload-label">
                            <i class="bi bi-cloud-upload fs-1 mb-2"></i>
                            <p class="mb-1"><strong>Click to upload</strong> or drag and drop</p>
                            <small class="text-muted">Add more images to this collection</small>
                        </label>
                    </div>
                    <div id="fileCount" class="file-count-badge" style="display: none;"></div>
                </div>
            </div>
        </div>

        <div class="form-actions-modern">
            <a asp-area="Admin" asp-controller="Collections" asp-action="Index" class="btn-cancel">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
            <button type="submit" class="btn-submit">
                <i class="bi bi-check-circle me-2"></i> Save Changes
            </button>
        </div>
    </form>

    @if(Model.Images?.Any() == true)
    {
        <div class="form-card mt-4">
            <div class="card-header-custom">
                <i class="bi bi-grid-3x3-gap me-2"></i>
                <h3 class="card-title-custom">Current Images</h3>
            </div>
            <div class="card-body-custom">
                <div class="alert alert-info mb-3">
                    <i class="bi bi-arrows-move me-2"></i> <strong>Drag and drop</strong> images to reorder them
                </div>
                
                <div id="sortable-images" class="images-grid">
                    @foreach (var i in Model.Images.OrderBy(x=>x.SortOrder))
                    {
                        <div class="image-card" data-image-id="@i.Id">
                            <div class="image-handle">
                                <i class="bi bi-grip-vertical"></i>
                            </div>
                            <img src="/uploads/images/@i.FileName-480.jpg" alt="Collection image" />
                            <div class="image-footer">
                                <small class="order-badge">Order: <span class="order-number">@i.SortOrder</span></small>
                                <button type="button" class="btn-delete-image" data-image-id="@i.Id" data-collection-id="@Model.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="alert alert-info mt-3" id="reorder-message" style="display: none;">
                    <i class="bi bi-info-circle"></i> Saving...
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Image Modal -->
<div class="modal fade" id="deleteImageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Delete Image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this image?</p>
                <p class="text-danger small"><i class="bi bi-exclamation-triangle me-1"></i> This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteImageForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // File upload feedback
    const fileInput = document.getElementById('newImages');
    const fileCountDiv = document.getElementById('fileCount');
    const fileLabel = document.querySelector('.file-upload-label');
    
    if (fileInput) {
        fileInput.addEventListener('change', function(e) {
            const fileCount = e.target.files.length;
            if (fileCount > 0) {
                fileCountDiv.style.display = 'inline-flex';
                fileCountDiv.textContent = `${fileCount} image${fileCount > 1 ? 's' : ''} selected`;
                fileLabel.innerHTML = `<i class="bi bi-check-circle fs-1 mb-2 text-success"></i>
                                      <p class="mb-1"><strong>${fileCount} file(s) selected</strong></p>
                                      <small class="text-muted">Click to change</small>`;
            }
        });
    }

    // Delete image functionality
    document.querySelectorAll('.btn-delete-image').forEach(function(btn) {
        btn.addEventListener('click', function() {
            var imageId = this.getAttribute('data-image-id');
            var collectionId = this.getAttribute('data-collection-id');
            document.getElementById('deleteImageForm').action = '/Admin/Collections/DeleteImage/' + collectionId + '/' + imageId;
            var modal = new bootstrap.Modal(document.getElementById('deleteImageModal'));
            modal.show();
        });
    });
    
    // Sortable drag & drop functionality
    var sortableContainer = document.getElementById('sortable-images');
    if (sortableContainer) {
        var sortable = new Sortable(sortableContainer, {
            animation: 150,
            handle: '.image-handle',
            ghostClass: 'image-ghost',
            onEnd: function(evt) {
                var imageIds = [];
                var items = sortableContainer.querySelectorAll('.image-card');
                items.forEach(function(item, index) {
                    var imageId = parseInt(item.getAttribute('data-image-id'), 10);
                    imageIds.push(imageId);
                    item.querySelector('.order-number').textContent = index;
                });
                
                var message = document.getElementById('reorder-message');
                if (message) {
                    message.style.display = 'block';
                }
                
                var collectionId = @Model.Id;
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                fetch('/Admin/Collections/ReorderImages/' + collectionId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(imageIds)
                })
                .then(function(response) { return response.json(); })
                .then(function(data) {
                    if (data.success) {
                        message.className = 'alert alert-success mt-3';
                        message.innerHTML = '<i class="bi bi-check-circle"></i> Order saved!';
                        setTimeout(function() { message.style.display = 'none'; }, 3000);
                    } else {
                        message.className = 'alert alert-danger mt-3';
                        message.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Error: ' + (data.message || 'Unknown error');
                    }
                })
                .catch(function(error) {
                    message.className = 'alert alert-danger mt-3';
                    message.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Error saving order';
                });
            }
        });
    }
});
</script>

