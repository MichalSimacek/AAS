@model AAS.Web.Models.Collection
@using AAS.Web.Models
@{
    ViewData["Title"] = "Create Collection";
}

<div class="admin-create-container">
    <div class="create-header">
        <div class="header-icon">
            <i class="bi bi-plus-circle"></i>
        </div>
        <h1 class="header-title">Create New Collection</h1>
        <p class="header-subtitle">Add a new aristocratic artwork to the collection</p>
    </div>

    <form action="/Admin/Collections/Create" method="post" enctype="multipart/form-data" class="create-form">
        @Html.AntiForgeryToken()
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-modern">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    <strong>Validation Error</strong>
                    <ul class="mb-0 mt-2">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            </div>
        }

        <div class="form-card">
            <div class="card-header-custom">
                <i class="bi bi-info-circle me-2"></i>
                <h3 class="card-title-custom">Collection Details</h3>
            </div>
            <div class="card-body-custom">

                <div class="form-group-modern">
                    <label for="Title" class="form-label-modern">
                        <i class="bi bi-pencil me-1"></i> Title <span class="required-star">*</span>
                    </label>
                    <input asp-for="Title" class="form-control-modern" placeholder="e.g., OMEGA Speedmaster Professional" required />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Category" class="form-label-modern">
                        <i class="bi bi-tag me-1"></i> Category <span class="required-star">*</span>
                    </label>
                    <select asp-for="Category" class="form-select-modern" required>
                        <option value="">-- Select Category --</option>
                        <option value="0">ðŸŽ¨ Paintings</option>
                        <option value="1">ðŸ’Ž Jewelry</option>
                        <option value="2">âŒš Watches</option>
                        <option value="3">ðŸ—¿ Statues</option>
                        <option value="4">âœ¨ Other</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger small"></span>
                </div>

                <div class="form-group-modern">
                    <label for="Description" class="form-label-modern">
                        <i class="bi bi-text-paragraph me-1"></i> Description
                    </label>
                    <textarea asp-for="Description" rows="6" class="form-control-modern" placeholder="Detailed description of the collection item..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                    <small class="form-text text-muted">Provide detailed information about the item's history, condition, and unique features.</small>
                </div>
            </div>
        </div>

        <div class="form-card">
            <div class="card-header-custom">
                <i class="bi bi-currency-euro me-2"></i>
                <h3 class="card-title-custom">Price & Availability</h3>
            </div>
            <div class="card-body-custom">

                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-group-modern">
                            <label asp-for="Status" class="form-label-modern">
                                <i class="bi bi-circle-fill me-1"></i> Status <span class="required-star">*</span>
                            </label>
                            <select asp-for="Status" class="form-select-modern" required>
                                <option value="0" selected>ðŸŸ¢ Available</option>
                                <option value="1">ðŸ”´ Sold</option>
                                <option value="2">ðŸŸ¡ In Auction</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group-modern">
                            <label for="Price" class="form-label-modern">
                                <i class="bi bi-cash me-1"></i> Price (Optional)
                            </label>
                            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control-modern" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group-modern">
                            <label asp-for="Currency" class="form-label-modern">
                                <i class="bi bi-currency-exchange me-1"></i> Currency
                            </label>
                            <select asp-for="Currency" class="form-select-modern">
                                <option value="0" selected>EUR (â‚¬)</option>
                                <option value="1">USD ($)</option>
                            </select>
                            <span asp-validation-for="Currency" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            
                <div class="verified-badge-container">
                    <div class="form-check-modern">
                        <input class="form-check-input" type="checkbox" name="AASVerified" id="AASVerified" value="true">
                        <label class="form-check-label" for="AASVerified">
                            <i class="bi bi-patch-check-fill text-primary me-2"></i>
                            <strong>AAS Verified</strong>
                            <span class="badge-subtitle">Authenticity guaranteed by Aristocratic Artwork Sale</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-card">
            <div class="card-header-custom">
                <i class="bi bi-images me-2"></i>
                <h3 class="card-title-custom">Media Files</h3>
            </div>
            <div class="card-body-custom">

                <div class="upload-section">
                    <label for="images" class="form-label-modern">
                        <i class="bi bi-image me-1"></i> Images <span class="required-star">*</span>
                    </label>
                    <div class="file-upload-wrapper">
                        <input type="file" id="images" name="images" multiple accept="image/jpeg,image/jpg,image/png,image/webp,.jpg,.jpeg,.png,.webp" class="file-input" required />
                        <label for="images" class="file-upload-label">
                            <i class="bi bi-cloud-upload fs-1 mb-2"></i>
                            <p class="mb-1"><strong>Click to upload</strong> or drag and drop</p>
                            <small class="text-muted">JPG, PNG, WebP (max 10MB each)</small>
                        </label>
                    </div>
                    <div id="fileCount" class="file-count-badge" style="display: none;"></div>
                    <small class="form-text text-muted mt-2 d-block">
                        <i class="bi bi-info-circle me-1"></i> Hold <kbd>Ctrl</kbd> (or <kbd>Cmd</kbd> on Mac) to select multiple files
                    </small>
                </div>

                <div class="form-group-modern mt-4">
                    <label class="form-label-modern">
                        <i class="bi bi-music-note-beamed me-1"></i> Audio File (Optional)
                    </label>
                    <div class="audio-upload-wrapper">
                        <input type="file" name="audio" id="audio" accept="audio/mpeg" class="file-input-small" />
                        <label for="audio" class="audio-upload-label">
                            <i class="bi bi-file-earmark-music me-2"></i>
                            Choose MP3 file
                        </label>
                        <span id="audioFileName" class="audio-file-name"></span>
                    </div>
                    <small class="form-text text-muted">Classical music for enhanced presentation (max 15MB)</small>
                </div>
            </div>
        </div>

        <div class="form-actions-modern">
            <a href="/Admin/Collections" class="btn-cancel">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
            <button type="submit" class="btn-submit">
                <i class="bi bi-check-circle me-2"></i> Create Collection
            </button>
        </div>
    </form>
</div>

<style>
.admin-create-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 32px 16px;
}

.create-header {
    text-align: center;
    margin-bottom: 40px;
}

.header-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 16px;
    background: linear-gradient(135deg, #B8941F 0%, #C9A961 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 32px;
}

.header-title {
    font-family: 'Playfair Display', serif;
    font-size: 32px;
    font-weight: 600;
    color: #1A1A1A;
    margin-bottom: 8px;
}

.header-subtitle {
    color: #4A4A4A;
    font-size: 16px;
}

.create-form {
    background: #FFFFFF;
}

.alert-modern {
    display: flex;
    align-items: start;
    border-radius: 12px;
    padding: 16px 20px;
    margin-bottom: 24px;
}

.form-card {
    background: #FFFFFF;
    border: 1px solid #E5E5E5;
    border-radius: 12px;
    margin-bottom: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    overflow: hidden;
}

.card-header-custom {
    background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%);
    padding: 20px 24px;
    border-bottom: 1px solid #E5E5E5;
    display: flex;
    align-items: center;
}

.card-header-custom i {
    color: #B8941F;
    font-size: 20px;
}

.card-title-custom {
    font-family: 'Playfair Display', serif;
    font-size: 20px;
    font-weight: 600;
    color: #1A1A1A;
    margin: 0;
}

.card-body-custom {
    padding: 32px 24px;
}

.form-group-modern {
    margin-bottom: 24px;
}

.form-label-modern {
    display: block;
    font-weight: 600;
    color: #1A1A1A;
    margin-bottom: 8px;
    font-size: 14px;
}

.form-label-modern i {
    color: #B8941F;
}

.required-star {
    color: #dc3545;
    margin-left: 2px;
}

.form-control-modern,
.form-select-modern {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #E5E5E5;
    border-radius: 8px;
    font-size: 14px;
    transition: all 0.2s ease;
    background: #FFFFFF;
}

.form-control-modern:focus,
.form-select-modern:focus {
    outline: none;
    border-color: #B8941F;
    box-shadow: 0 0 0 3px rgba(184, 148, 31, 0.1);
}

.form-control-modern::placeholder {
    color: #999;
}

textarea.form-control-modern {
    resize: vertical;
    min-height: 120px;
}

.verified-badge-container {
    margin-top: 24px;
    padding: 16px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px dashed #B8941F;
}

.form-check-modern {
    display: flex;
    align-items: start;
}

.form-check-modern .form-check-input {
    width: 20px;
    height: 20px;
    margin-top: 2px;
    margin-right: 12px;
    cursor: pointer;
}

.form-check-modern label {
    cursor: pointer;
    display: flex;
    flex-direction: column;
}

.badge-subtitle {
    display: block;
    font-weight: normal;
    color: #6B6B6B;
    font-size: 13px;
    margin-top: 4px;
}

.upload-section {
    margin-bottom: 32px;
}

.file-upload-wrapper {
    position: relative;
    margin-top: 8px;
}

.file-input {
    position: absolute;
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    z-index: 2;
}

.file-input-small {
    display: none;
}

.file-upload-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 48px 24px;
    border: 2px dashed #E5E5E5;
    border-radius: 12px;
    background: #FAFAFA;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
}

.file-upload-label:hover {
    border-color: #B8941F;
    background: #FFF9E6;
}

.file-upload-label i {
    color: #B8941F;
}

.file-count-badge {
    display: inline-flex;
    align-items: center;
    padding: 8px 16px;
    background: #d4edda;
    color: #155724;
    border-radius: 20px;
    font-size: 14px;
    margin-top: 12px;
}

.file-count-badge::before {
    content: "âœ“";
    margin-right: 8px;
    font-weight: bold;
}

.audio-upload-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
}

.audio-upload-label {
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    background: #FFFFFF;
    border: 1px solid #E5E5E5;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 14px;
}

.audio-upload-label:hover {
    background: #F5F5F5;
    border-color: #B8941F;
}

.audio-file-name {
    color: #4A4A4A;
    font-size: 14px;
}

kbd {
    background: #E5E5E5;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 12px;
    font-family: monospace;
}

.form-actions-modern {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
    padding-top: 32px;
    margin-top: 32px;
    border-top: 2px solid #F5F5F5;
}

.btn-cancel {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    background: #FFFFFF;
    border: 1px solid #E5E5E5;
    border-radius: 8px;
    color: #4A4A4A;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    cursor: pointer;
}

.btn-cancel:hover {
    background: #F5F5F5;
    border-color: #999;
}

.btn-submit {
    display: inline-flex;
    align-items: center;
    padding: 12px 32px;
    background: linear-gradient(135deg, #B8941F 0%, #C9A961 100%);
    border: none;
    border-radius: 8px;
    color: #FFFFFF;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(184, 148, 31, 0.2);
}

.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(184, 148, 31, 0.3);
}

@@media (max-width: 768px) {
    .card-body-custom {
        padding: 24px 16px;
    }
    
    .form-actions-modern {
        flex-direction: column-reverse;
    }
    
    .btn-cancel,
    .btn-submit {
        width: 100%;
        justify-content: center;
    }
}
</style>




@@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Image upload handling
        const imagesInput = document.getElementById('images');
        const fileCountDiv = document.getElementById('fileCount');
        const fileLabel = document.querySelector('.file-upload-label');
        
        if (imagesInput) {
            imagesInput.addEventListener('change', function(e) {
                const fileCount = e.target.files.length;
                if (fileCount > 0) {
                    fileCountDiv.style.display = 'inline-flex';
                    fileCountDiv.textContent = `${fileCount} image${fileCount > 1 ? 's' : ''} selected`;
                    
                    // Update label
                    const firstFileName = e.target.files[0].name;
                    if (fileCount === 1) {
                        fileLabel.innerHTML = `<i class="bi bi-check-circle fs-1 mb-2 text-success"></i>
                                              <p class="mb-1"><strong>${firstFileName}</strong></p>
                                              <small class="text-muted">Click to change</small>`;
                    } else {
                        fileLabel.innerHTML = `<i class="bi bi-check-circle fs-1 mb-2 text-success"></i>
                                              <p class="mb-1"><strong>${fileCount} files selected</strong></p>
                                              <small class="text-muted">Click to change</small>`;
                    }
                } else {
                    fileCountDiv.style.display = 'none';
                    fileLabel.innerHTML = `<i class="bi bi-cloud-upload fs-1 mb-2"></i>
                                           <p class="mb-1"><strong>Click to upload</strong> or drag and drop</p>
                                           <small class="text-muted">JPG, PNG, WebP (max 10MB each)</small>`;
                }
            });
        }
        
        // Audio upload handling
        const audioInput = document.getElementById('audio');
        const audioFileName = document.getElementById('audioFileName');
        
        if (audioInput) {
            audioInput.addEventListener('change', function(e) {
                if (e.target.files.length > 0) {
                    const fileName = e.target.files[0].name;
                    audioFileName.textContent = fileName;
                    audioFileName.style.color = '#155724';
                } else {
                    audioFileName.textContent = '';
                }
            });
        }
        
        // Form validation feedback
        const form = document.querySelector('.create-form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const submitBtn = form.querySelector('.btn-submit');
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i> Creating...';
                submitBtn.disabled = true;
            });
        }
    });
    </script>
}
