@model AAS.Web.Models.Collection
@using AAS.Web.Models
@{
    ViewData["Title"] = "Create Collection";
}

<div class="admin-form-container">
    <div class="form-header">
        <h1 class="page-heading mb-2">Create New Collection</h1>
        <p class="text-secondary mb-0">Add a new aristocratic artwork collection</p>
    </div>

    <div class="ornament-divider"></div>

    <form asp-area="Admin" asp-controller="Collections" asp-action="Create" method="post" enctype="multipart/form-data" class="luxury-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="form-section">
            <h3 class="section-title">Collection Details</h3>

            <div class="form-group">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter collection title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="form-label">Category</label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<CollectionCategory>()" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" rows="6" class="form-control" placeholder="Enter collection description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="ornament-divider-small"></div>

        <div class="form-section">
            <h3 class="section-title">Media Files</h3>

            <div class="form-group">
                <label class="form-label">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                        <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                        <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
                    </svg>
                    Images (multiple files allowed)
                </label>
                <input type="file" name="images" multiple accept="image/*" class="form-control" />
                <small class="form-text">Supported formats: JPG, PNG, WebP (max 10MB each)</small>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                        <path d="M6 13c0 1.105-1.12 2-2.5 2S1 14.105 1 13c0-1.104 1.12-2 2.5-2s2.5.896 2.5 2zm9-2c0 1.105-1.12 2-2.5 2s-2.5-.895-2.5-2 1.12-2 2.5-2 2.5.895 2.5 2z"/>
                        <path fill-rule="evenodd" d="M14 11V2h1v9h-1zM6 3v10H5V3h1z"/>
                        <path d="M5 2.905a1 1 0 0 1 .9-.995l8-.8a1 1 0 0 1 1.1.995V3L5 4V2.905z"/>
                    </svg>
                    Audio File (MP3)
                </label>
                <input type="file" name="audio" accept="audio/mpeg" class="form-control" />
                <small class="form-text">Optional classical music (max 15MB)</small>
            </div>
        </div>

        <div class="ornament-divider-small"></div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline-primary">
                Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <span>âœ¦</span> Create Collection
            </button>
        </div>
    </form>
</div>

<style>
.admin-form-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 0;
}

.form-header {
    text-align: center;
    margin-bottom: 2rem;
}

.luxury-form {
    background: linear-gradient(135deg, rgba(26, 26, 26, 0.8) 0%, rgba(10, 10, 10, 0.9) 100%);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 3rem;
    box-shadow: var(--shadow-lg);
}

.form-section {
    margin-bottom: 2.5rem;
}

.section-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: var(--gold-light);
    margin-bottom: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.5px;
}

.form-group {
    margin-bottom: 1.75rem;
}

.form-text {
    display: block;
    margin-top: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
    opacity: 0.8;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
}

.validation-summary-errors {
    background: rgba(255, 107, 107, 0.1);
    border: 1px solid rgba(255, 107, 107, 0.3);
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 2rem;
}

.validation-summary-errors ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.validation-summary-errors li {
    color: #ffaaaa;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
}

@@media (max-width: 768px) {
    .luxury-form {
        padding: 2rem 1.5rem;
    }

    .form-actions {
        flex-direction: column-reverse;
    }

    .form-actions .btn {
        width: 100%;
    }
}
</style>

@@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
