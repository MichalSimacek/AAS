@model AAS.Web.Models.BlogPost
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L

@{
    ViewData["Title"] = L["Edit Blog Post"];
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">@L["Edit Blog Post"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">@L["Back to Blog"]</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="TitleCs" class="form-label">@L["Blog Title"] (Čeština)</label>
                    <input asp-for="TitleCs" class="form-control" required />
                    <span asp-validation-for="TitleCs" class="text-danger"></span>
                    <small class="form-text text-muted">@L["Changes will be automatically translated using DeepL"]</small>
                </div>

                <div class="mb-3">
                    <label asp-for="ContentCs" class="form-label">@L["Blog Content"] (Čeština)</label>
                    <textarea asp-for="ContentCs" class="form-control tinymce-editor" rows="15" required></textarea>
                    <span asp-validation-for="ContentCs" class="text-danger"></span>
                    <small class="form-text text-muted">@L["Content will be automatically re-translated to all supported languages"]</small>
                </div>

                @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                {
                    <div class="mb-3">
                        <label class="form-label">@L["Current Featured Image"]</label>
                        <div>
                            <img src="@Model.FeaturedImage" alt="Featured" style="max-width: 300px; max-height: 200px;" class="img-thumbnail" />
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">@L["Featured Image"] @(string.IsNullOrEmpty(Model.FeaturedImage) ? "" : "(Replace)")</label>
                    <input type="file" name="featuredImage" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">@L["Optional: Leave empty to keep current image"]</small>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Published" class="form-check-input" type="checkbox" />
                    <label asp-for="Published" class="form-check-label">@L["Published"]</label>
                    <small class="form-text text-muted d-block">@L["Uncheck to save as draft"]</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">@L["Save Changes"]</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">@L["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '.tinymce-editor',
            height: 500,
            menubar: true,
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | formatselect | bold italic backcolor | \
                     alignleft aligncenter alignright alignjustify | \
                     bullist numlist outdent indent | removeformat | help',
            content_style: 'body { font-family: Arial, sans-serif; font-size: 14px }'
        });
    </script>
}
