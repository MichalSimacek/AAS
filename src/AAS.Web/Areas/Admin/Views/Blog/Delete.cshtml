@model AAS.Web.Models.BlogPost
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L

@{
    ViewData["Title"] = L["Delete Blog Post"];
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">@L["Delete Blog Post"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">@L["Back to Blog"]</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="alert alert-warning">
                <h5>@L["Are you sure you want to delete this blog post?"]</h5>
                <p class="mb-0">@L["This action cannot be undone."]</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">@L["Blog Title"]</dt>
                <dd class="col-sm-9">@Model.TitleCs</dd>

                <dt class="col-sm-3">@L["Status"]</dt>
                <dd class="col-sm-9">
                    @if (Model.Published)
                    {
                        <span class="badge bg-success">@L["Published"]</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@L["Draft"]</span>
                    }
                </dd>

                <dt class="col-sm-3">@L["Created"]</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                {
                    <dt class="col-sm-3">@L["Featured Image"]</dt>
                    <dd class="col-sm-9">
                        <img src="@Model.FeaturedImage" alt="Featured" style="max-width: 300px; max-height: 200px;" class="img-thumbnail" />
                    </dd>
                }
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">@L["Delete"]</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">@L["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
