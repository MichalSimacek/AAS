@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L
@{
    ViewData["Title"] = L["Contact Us"];
}

<div class="section">
  <div class="container">
    <h1 class="page-heading">@L["Contact Us"]</h1>
    <p class="page-description">
      @L["Get in touch with our team"]
    </p>

    <div class="row g-4" style="justify-content: center;">
      <div class="col-12 col-lg-8">
        <div class="card">
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <h2>Reach Out to Us</h2>
              <p class="text-secondary">
                Our specialists are available to answer your questions and provide expert guidance. 
                We guarantee a response within 12 hours.
              </p>
            </div>

            <div class="mb-4">
              <h3>Email Address</h3>
              <p class="mb-2">
                <a href="mailto:aristocratic-artwork-sell@proton.me">
                  <strong>aristocratic-artwork-sell&#64;proton.me</strong>
                </a>
              </p>
              
              <h3 class="mt-4">Location</h3>
              <p class="mb-2 text-secondary">Houston, Texas, USA</p>
              <p class="small text-secondary">Worldwide representation available</p>
              
              <h3 class="mt-4">Response Time</h3>
              <p class="mb-2 text-secondary">Within 12 hours</p>
              <p class="small text-secondary">Professional and confidential service</p>
            </div>

            <div class="alert alert-info">
              <strong>Privacy Notice:</strong> All communications are handled with the strictest confidentiality. 
              Your personal information and inquiries are secure with us.
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
