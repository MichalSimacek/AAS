@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L
@{
    ViewData["Title"] = L["Contact Us"];
}

<div class="section">
  <div class="container">
    <h1 class="page-heading">@L["Contact Us"]</h1>
    <p class="page-description">
      @L["Get in touch with our team"]
    </p>

    <div class="row g-4" style="justify-content: center;">
      <div class="col-12 col-lg-8">
        <div class="card">
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <h2>@L["Reach Out to Us"]</h2>
              <p class="text-secondary">
                @L["Reach Out to Us Text"]
              </p>
            </div>

            <div class="mb-4">
              <h3>@L["Email Address"]</h3>
              <p class="mb-2">
                <a href="mailto:info@aristocraticartworksale.com">
                  <strong>info&#64;aristocraticartworksale.com</strong>
                </a>
              </p>
              
              <h3 class="mt-4">@L["Location"]</h3>
              <p class="mb-2 text-secondary">@L["Houston, Texas, USA"]</p>
              <p class="small text-secondary">@L["Worldwide representation available"]</p>
              
              <h3 class="mt-4">@L["Response Time"]</h3>
              <p class="mb-2 text-secondary">@L["Within 12 hours"]</p>
              <p class="small text-secondary">@L["Professional and confidential service"]</p>
            </div>

            <div class="alert alert-info">
              <strong>@L["Privacy Notice"]</strong> @L["Privacy Notice Text"]
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
