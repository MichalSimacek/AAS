@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L
@{
    var rqf = Context.Request.HttpContext.Features.Get<IRequestCultureFeature>();
    var culture = rqf?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "en";
    var cultures = new[]{"en","cs","ru","de","es","fr","zh","pt","hi","ja"};
}
<!DOCTYPE html>
<html lang="@culture">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Aristocratic Artwork Sale</title>
  <meta name="description" content="Discretion, quality and professionalism in fine art, jewelry, watches and collectibles." />
  <style>
    /* Critical CSS to prevent FOUC and layout shifts */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html { font-size: 16px; height: 100%; }
    body {
      background: #FFFFFF;
      color: #1A1A1A;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      font-size: 16px;
      line-height: 1.6;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      visibility: visible;
      opacity: 1;
      transition: none;
    }
    main { flex: 1 0 auto; width: 100%; contain: layout style; }
    .container { max-width: 1140px; margin: 0 auto; padding: 0 15px; width: 100%; }
    .identity-card { max-width: 520px; width: 100%; margin: 0 auto; padding: 48px; }
    
    /* Prevent layout shifts during font loading */
    body { font-display: optional; }
  </style>
  <link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;600&display=optional" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/site.css?v=39-modal-inline" />
  <link rel="icon" href="/images/logo.png"/>
  <meta property="og:title" content="Aristocratic Artwork Sale"/>
  <meta property="og:type" content="website"/>
  <meta property="og:image" content="/images/logo.png"/>
  <meta property="og:description" content="@L["Slogan"]"/>
  <link rel="canonical" href="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script type="application/ld+json">
  {
    "@@context": "https://schema.org",
    "@@type": "Organization",
    "name": "Aristocratic Artwork Sale",
    "url": "https://aristocraticartworksale.com",
    "logo": "/images/logo.png"
  }
  </script>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg container">
      <button class="navbar-toggler mx-auto" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse justify-content-center">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">@L["Home"]</a></li>
          <li class="nav-item"><a class="nav-link" href="/Collections">@L["Collections"]</a></li>
          <li class="nav-item"><a class="nav-link" href="/Blog">@L["Blog"]</a></li>
          <li class="nav-item"><a class="nav-link" href="/About">@L["About us"]</a></li>
          <li class="nav-item"><a class="nav-link" href="/Contacts">@L["Contacts"]</a></li>
          <partial name="_LoginPartial" />
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" role="button" aria-expanded="false">
              @culture.ToUpper()
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              @foreach (var c in cultures){
                <li><a class="dropdown-item" href="#" onclick="setLang('@c')">@c.ToUpper()</a></li>
              }
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <main>@RenderBody()</main>
  
  <footer>
    <div class="container text-center">
      <p class="mb-2"><strong>Aristocratic Artwork Sale</strong></p>
      <p class="small mb-0">Â© @DateTime.UtcNow.Year All rights reserved. Discretion, Quality & Professionalism.</p>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="/js/site.js?v=3"></script>

  <form id="cultureForm" method="post" asp-area="" asp-controller="Home" asp-action="SetLanguage">
    <input type="hidden" name="culture" id="cultureInput" />
    <input type="hidden" name="returnUrl" id="returnUrlInput" />
  </form>
  
  <script>
  function setLang(culture) {
    document.getElementById('cultureInput').value = culture;
    document.getElementById('returnUrlInput').value = window.location.pathname + window.location.search;
    document.getElementById('cultureForm').submit();
  }
  </script>
  
  @RenderSection("Scripts", required: false)
</body>
</html>
