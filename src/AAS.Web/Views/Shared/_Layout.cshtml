@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L
@{
    var rqf = Context.Request.HttpContext.Features.Get<IRequestCultureFeature>();
    var culture = rqf?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "en";
    var cultures = new[]{"en","cs","ru","de","es","fr","zh","pt","hi","ja"};
}
<!DOCTYPE html>
<html lang="@culture">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Aristocratic Artwork Sale</title>
  <meta name="description" content="Discretion, quality and professionalism in fine art, jewelry, watches and collectibles." />
  <link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/site.css?v=15" />
  <link rel="icon" href="/images/logo.png"/>
  <meta property="og:title" content="Aristocratic Artwork Sale"/>
  <meta property="og:type" content="website"/>
  <meta property="og:image" content="/images/logo.png"/>
  <meta property="og:description" content="@L["Slogan"]"/>
  <link rel="canonical" href="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script type="application/ld+json">
  {
    "@@context": "https://schema.org",
    "@@type": "Organization",
    "name": "Aristocratic Artwork Sale",
    "url": "https://aristocraticartworksale.com",
    "logo": "/images/logo.png"
  }
  </script>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg container">
      <a class="navbar-brand" href="/">
        <span class="brand-title">Aristocratic Artwork Sale</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/Collections">@L["Collections"]</a></li>
          <li class="nav-item"><a class="nav-link" href="/About">@L["About us"]</a></li>
          <li class="nav-item"><a class="nav-link" href="/Contacts">@L["Contacts"]</a></li>
          <partial name="_LoginPartial" />
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" role="button" aria-expanded="false">
              @culture.ToUpper()
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              @foreach (var c in cultures){
                <li><a class="dropdown-item" href="#" onclick="setLang('@c')">@c.ToUpper()</a></li>
              }
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <main class="container py-5">@RenderBody()</main>
  
  <footer>
    <div class="container text-center">
      <p class="mb-2"><strong>Aristocratic Artwork Sale</strong></p>
      <p class="small mb-0">Â© @DateTime.UtcNow.Year All rights reserved. Discretion, Quality & Professionalism.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="/js/site.js"></script>

  <form id="cultureForm" method="post" asp-controller="Home" asp-action="SetLanguage"></form>
  @RenderSection("Scripts", required: false)
</body>
</html>