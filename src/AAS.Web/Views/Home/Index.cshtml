@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L

<section class="hero">
  <div class="container">
    <div class="hero-accent"></div>
    <div class="hero-logo-container">
      <svg class="hero-logo" viewBox="0 0 300 300" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#D4AF37;stop-opacity:1" />
            <stop offset="50%" style="stop-color:#B8941F;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#8B7355;stop-opacity:1" />
          </linearGradient>
          <filter id="shadow">
            <feDropShadow dx="0" dy="2" stdDeviation="3" flood-opacity="0.2"/>
          </filter>
        </defs>
        
        <!-- Outer decorative circle -->
        <circle cx="150" cy="150" r="140" fill="none" stroke="url(#goldGradient)" stroke-width="2" opacity="0.3"/>
        <circle cx="150" cy="150" r="130" fill="none" stroke="url(#goldGradient)" stroke-width="1" opacity="0.2"/>
        
        <!-- Crown -->
        <g class="logo-crown" filter="url(#shadow)">
          <path d="M150 60 L157 75 L172 68 L168 85 L185 82 L178 95 L150 102 L122 95 L115 82 L132 85 L128 68 L143 75 Z" 
                fill="url(#goldGradient)" stroke="#8B7355" stroke-width="1.5"/>
          <circle cx="150" cy="58" r="4" fill="#D4AF37"/>
          <circle cx="128" cy="68" r="3.5" fill="#D4AF37"/>
          <circle cx="172" cy="68" r="3.5" fill="#D4AF37"/>
        </g>
        
        <!-- Laurel wreath - left side -->
        <g class="logo-laurel-left" filter="url(#shadow)">
          <path d="M90 150 Q82 130 75 115 Q73 122 72 130 Q78 142 88 155" 
                fill="none" stroke="url(#goldGradient)" stroke-width="3" stroke-linecap="round"/>
          <path d="M88 160 Q80 145 73 130 Q71 137 70 145 Q76 155 86 168" 
                fill="none" stroke="url(#goldGradient)" stroke-width="3" stroke-linecap="round"/>
          <path d="M86 175 Q78 160 71 145 Q69 152 68 160 Q74 170 84 183" 
                fill="none" stroke="url(#goldGradient)" stroke-width="3" stroke-linecap="round"/>
          <!-- Leaves -->
          <ellipse cx="78" cy="125" rx="6" ry="10" fill="#B8941F" opacity="0.6" transform="rotate(-30 78 125)"/>
          <ellipse cx="75" cy="140" rx="6" ry="10" fill="#B8941F" opacity="0.6" transform="rotate(-35 75 140)"/>
          <ellipse cx="73" cy="155" rx="6" ry="10" fill="#B8941F" opacity="0.6" transform="rotate(-40 73 155)"/>
        </g>
        
        <!-- Laurel wreath - right side -->
        <g class="logo-laurel-right" filter="url(#shadow)">
          <path d="M210 150 Q218 130 225 115 Q227 122 228 130 Q222 142 212 155" 
                fill="none" stroke="url(#goldGradient)" stroke-width="3" stroke-linecap="round"/>
          <path d="M212 160 Q220 145 227 130 Q229 137 230 145 Q224 155 214 168" 
                fill="none" stroke="url(#goldGradient)" stroke-width="3" stroke-linecap="round"/>
          <path d="M214 175 Q222 160 229 145 Q231 152 232 160 Q226 170 216 183" 
                fill="none" stroke="url(#goldGradient)" stroke-width="3" stroke-linecap="round"/>
          <!-- Leaves -->
          <ellipse cx="222" cy="125" rx="6" ry="10" fill="#B8941F" opacity="0.6" transform="rotate(30 222 125)"/>
          <ellipse cx="225" cy="140" rx="6" ry="10" fill="#B8941F" opacity="0.6" transform="rotate(35 225 140)"/>
          <ellipse cx="227" cy="155" rx="6" ry="10" fill="#B8941F" opacity="0.6" transform="rotate(40 227 155)"/>
        </g>
        
        <!-- Shield background -->
        <path d="M150 110 L190 130 L190 180 Q190 200 150 220 Q110 200 110 180 L110 130 Z" 
              fill="rgba(255,255,255,0.95)" stroke="url(#goldGradient)" stroke-width="2" filter="url(#shadow)"/>
        
        <!-- Monogram AAS -->
        <g class="logo-monogram">
          <text x="150" y="175" font-family="'Playfair Display', serif" font-size="52" 
                font-weight="700" fill="#1a1a1a" text-anchor="middle" letter-spacing="2">AAS</text>
        </g>
        
        <!-- Decorative line under text -->
        <line x1="125" y1="185" x2="175" y2="185" stroke="url(#goldGradient)" stroke-width="2" stroke-linecap="round"/>
        
        <!-- Bottom ornament -->
        <path d="M150 225 L145 235 L150 233 L155 235 Z" fill="url(#goldGradient)" opacity="0.8"/>
      </svg>
    </div>
    <h1>Aristocratic Artwork Sale</h1>
    <p class="lead">@L["Slogan"]</p>
    <p class="text-secondary" style="max-width: 600px; margin: 0 auto 2rem;">
      Discover exceptional fine art, antiques, precious jewelry, and luxury watches. 
      We provide the highest prices with guaranteed discretion and professionalism.
    </p>
    <div class="d-flex gap-3 justify-content-center flex-wrap">
      <a class="btn btn-lg btn-primary" href="/Collections">@L["Explore collections"]</a>
      <a class="btn btn-lg btn-outline-primary" href="/Contacts">Contact Us</a>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <h2 class="section-title">Why Choose Us</h2>
    <p class="section-subtitle">Excellence in Every Transaction</p>
    
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">Highest Prices</h3>
            <p class="card-text">We offer the most competitive prices for your valuable items, ensuring you receive their true worth.</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">Complete Discretion</h3>
            <p class="card-text">Your privacy is paramount. All transactions are conducted with the utmost confidentiality.</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">Expert Service</h3>
            <p class="card-text">Our specialists provide professional evaluations and personalized service for every client.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>