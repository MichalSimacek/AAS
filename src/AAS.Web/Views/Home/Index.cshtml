@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L

<section class="hero">
  <div class="container">
    <div class="hero-accent"></div>
    <div class="hero-logo-container">
      <svg class="hero-logo" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <!-- Crown -->
        <g class="logo-crown">
          <path d="M100 45 L105 55 L115 50 L113 62 L125 60 L120 70 L100 75 L80 70 L75 60 L87 62 L85 50 L95 55 Z" 
                fill="#B8941F" stroke="#B8941F" stroke-width="1"/>
          <circle cx="100" cy="45" r="3" fill="#B8941F"/>
          <circle cx="85" cy="50" r="2.5" fill="#B8941F"/>
          <circle cx="115" cy="50" r="2.5" fill="#B8941F"/>
        </g>
        
        <!-- Laurel wreath left -->
        <g class="logo-laurel-left">
          <path d="M60 100 Q55 85 50 75 Q48 80 47 85 Q52 92 58 102" 
                fill="none" stroke="#B8941F" stroke-width="2"/>
          <path d="M58 105 Q53 95 48 85 Q46 90 45 95 Q50 102 56 110" 
                fill="none" stroke="#B8941F" stroke-width="2"/>
          <path d="M56 115 Q51 105 46 95 Q44 100 43 105 Q48 112 54 120" 
                fill="none" stroke="#B8941F" stroke-width="2"/>
        </g>
        
        <!-- Laurel wreath right -->
        <g class="logo-laurel-right">
          <path d="M140 100 Q145 85 150 75 Q152 80 153 85 Q148 92 142 102" 
                fill="none" stroke="#B8941F" stroke-width="2"/>
          <path d="M142 105 Q147 95 152 85 Q154 90 155 95 Q150 102 144 110" 
                fill="none" stroke="#B8941F" stroke-width="2"/>
          <path d="M144 115 Q149 105 154 95 Q156 100 157 105 Q152 112 146 120" 
                fill="none" stroke="#B8941F" stroke-width="2"/>
        </g>
        
        <!-- Center monogram AAS -->
        <g class="logo-monogram">
          <text x="100" y="115" font-family="'Playfair Display', serif" font-size="42" 
                font-weight="700" fill="#1a1a1a" text-anchor="middle">AAS</text>
        </g>
        
        <!-- Column icon -->
        <g class="logo-column">
          <rect x="95" y="130" width="10" height="30" fill="#B8941F" opacity="0.8"/>
          <rect x="93" y="128" width="14" height="4" fill="#B8941F"/>
          <rect x="93" y="158" width="14" height="4" fill="#B8941F"/>
        </g>
      </svg>
    </div>
    <h1>Aristocratic Artwork Sale</h1>
    <p class="lead">@L["Slogan"]</p>
    <p class="text-secondary" style="max-width: 600px; margin: 0 auto 2rem;">
      Discover exceptional fine art, antiques, precious jewelry, and luxury watches. 
      We provide the highest prices with guaranteed discretion and professionalism.
    </p>
    <div class="d-flex gap-3 justify-content-center flex-wrap">
      <a class="btn btn-lg btn-primary" href="/Collections">@L["Explore collections"]</a>
      <a class="btn btn-lg btn-outline-primary" href="/Contacts">Contact Us</a>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <h2 class="section-title">Why Choose Us</h2>
    <p class="section-subtitle">Excellence in Every Transaction</p>
    
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">Highest Prices</h3>
            <p class="card-text">We offer the most competitive prices for your valuable items, ensuring you receive their true worth.</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">Complete Discretion</h3>
            <p class="card-text">Your privacy is paramount. All transactions are conducted with the utmost confidentiality.</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">Expert Service</h3>
            <p class="card-text">Our specialists provide professional evaluations and personalized service for every client.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>