@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L

<section class="hero">
  <div class="container">
    <div class="hero-accent"></div>
    <div class="hero-logo-container">
      <img src="/images/logo-hero.png" alt="Aristocratic Artwork Sale" class="hero-logo" />
    </div>
    <h1>Aristocratic Artwork Sale</h1>
    <p class="lead">@L["Slogan"]</p>
    <p class="text-secondary" style="max-width: 600px; margin: 0 auto 2rem;">
      @L["Home Description"]
    </p>
    <div class="d-flex gap-3 justify-content-center flex-wrap">
      <a class="btn btn-lg btn-primary" href="/Collections">@L["Explore collections"]</a>
      <a class="btn btn-lg btn-outline-primary" href="/Contacts">@L["Contact Us"]</a>
    </div>
  </div>
</section>

<section class="section bg-light">
  <div class="container text-center">
    <h2 class="section-title">@L["BuyOrSellThroughUs"]</h2>
    <p class="lead mb-4">@L["BuyOrSellDescription"]</p>
    <p class="mb-4">@L["BuyOrSellDetails"]</p>
    <a href="/HowTo" class="btn btn-primary btn-lg">
      <i class="bi bi-info-circle me-2"></i>
      @L["LearnMore"]
    </a>
  </div>
</section>

<section class="section">
  <div class="container">
    <h2 class="section-title">@L["Why Choose Us"]</h2>
    <p class="section-subtitle">@L["Excellence in Every Transaction"]</p>
    
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">@L["Highest Prices"]</h3>
            <p class="card-text">@L["Highest Prices Desc"]</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">@L["Complete Discretion"]</h3>
            <p class="card-text">@L["Complete Discretion Desc"]</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">@L["Expert Service"]</h3>
            <p class="card-text">@L["Expert Service Desc"]</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>