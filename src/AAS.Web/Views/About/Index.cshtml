@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> L
@{
    ViewData["Title"] = L["About Us"];
}

<div class="section">
  <div class="container">
    <h1 class="page-heading">@L["About Us"]</h1>
    <p class="page-description">
      @L["Excellence in luxury artwork and collectibles"]
    </p>

    <div class="row g-4">
      <div class="col-12 col-lg-6">
        <div class="card">
          <div class="card-body">
            <h2>@L["Who We Are"]</h2>
            <p>@L["Who We Are Text"]</p>
          </div>
        </div>
      </div>
      
      <div class="col-12 col-lg-6">
        <div class="card">
          <div class="card-body">
            <h2>@L["Our Services"]</h2>
            <ul class="list-unstyled">
              <li class="mb-3">
                <strong>@L["Fine Art & Paintings"]</strong> @L["Fine Art & Paintings Desc"]
              </li>
              <li class="mb-3">
                <strong>@L["Antiques & Collectibles"]</strong> @L["Antiques & Collectibles Desc"]
              </li>
              <li class="mb-3">
                <strong>@L["Luxury Jewelry"]</strong> @L["Luxury Jewelry Desc"]
              </li>
              <li class="mb-3">
                <strong>@L["Fine Watches"]</strong> @L["Fine Watches Desc"]
              </li>
              <li class="mb-0">
                <strong>@L["Sculptures & Statues"]</strong> @L["Sculptures & Statues Desc"]
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-body text-center p-4">
        <h2 class="mb-4">@L["Our Commitment"]</h2>
        <div class="row g-4">
          <div class="col-12 col-md-4">
            <h3>@L["Highest Prices"]</h3>
            <p class="text-secondary mb-0">@L["Highest Prices Commitment"]</p>
          </div>
          <div class="col-12 col-md-4">
            <h3>@L["Complete Discretion"]</h3>
            <p class="text-secondary mb-0">@L["Complete Discretion Commitment"]</p>
          </div>
          <div class="col-12 col-md-4">
            <h3>@L["Professional Service"]</h3>
            <p class="text-secondary mb-0">@L["Professional Service Commitment"]</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
